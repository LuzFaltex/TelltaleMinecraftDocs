{
  "metadata": [
    {
      "src": [
        {
          "files": [ "**/*.sln", "src/DotnetNew/*.csproj" ],
          "exclude": [ "**/bin/**", "**/obj/**" ],
          "src": "src"
        }
      ],
      "dest": "obj/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "**/*.yml" ],
        "src": "obj/api",
        "dest": "api"
      },
      {
        "files": ["guides/**.md", "*.md", "toc.yml", "faq/**"]
      }
    ],
    "resource": [
      {
        "files": [ "articles/images/**"]
      }
    ],
    "template": [
      "default",
      "_template/light-dark-theme",
      "_template/last-modified",
      "_template/description-generator"
    ],
    "overwrite": "specs/*.md",
    "globalMetadata": {
      "_appTitle": "Telltale Minecraft Docs",
      "_appFooter": "Server owned by Telltale Atheist // Additional support provided by LuzFaltex",
      "_enableSearch": true
    },
    "markdownEngineName": "markdig",
    "dest": "_site",
    "xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ]
  }
}
